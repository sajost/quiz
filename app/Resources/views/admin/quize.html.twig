        			</div>
            		
            		<div class="form-group">
        				<label for="{{ form.difficulty.vars.id }}">Schwierigkeitsstufe</label>
        				{{ form_widget(form.difficulty) }}
        				<div class="help-block with-errors">{{ form_errors(form.difficulty) }}</div>
        			</div>
        			
        			<div class="form-group">
        				<label for="{{ form.timelimit.vars.id }}">Zeitlimit in Sekunden</label>
        				{{ form_widget(form.timelimit) }}
        				<div class="help-block with-errors">{{ form_errors(form.timelimit) }}</div>
        			</div>
        			
        			<div class="form-group">
        				<label for="{{ form.random.vars.id }}">Reihenfolge zufällig</label>
        				{{ form_widget(form.random) }}
