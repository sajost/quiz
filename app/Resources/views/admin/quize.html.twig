        			</div>
        			
        			<div class="form-group">
        				<label for="{{ form.repeat.vars.id }}">Fragen wiederholen</label>
        				{{ form_widget(form.repeat) }}
        				<div class="help-block with-errors">{{ form_errors(form.repeat) }}</div>
        			</div>
        			
        			<div class="form-group">
        				<label for="{{ form.trueanswer.vars.id }}">Frage-Typs</label>
        				{{ form_widget(form.trueanswer) }}
        				<div class="help-block with-errors">{{ form_errors(form.trueanswer) }}</div>
        			</div>
            		
            		{{ form_row(form.cats) }}
                	
                	<div style="display: none">
                	    {{ form_rest(form) }}
                	</div>
            		<div class="f-admin">
            			<button class="btn btn-primary btn-lg" type="submit">Speichern</button>
            		</div>
                
