{# src/Resources/views/admin/q.tag.html.twig #} 
{% extends 'admin/init.html.twig' %} 


{% block body %}
	<div id="" class="container">

		<div id="panel" class="panel panel-default">
			<div class="panel-heading">
            	<h3 class="panel-title">Da ist die ganze Liste von allen Tags, KLicken zum Bearbeiten</h3>
            </div>
			<div class="panel-body">
				<div class="panel-scroll">
				<table class="table table-bordered" fixed-header>
					<thead>
                        <tr>
                          <th style="width:50px">#</th>
                          <th style="width:250px">Titel</th>
                        </tr>
                    </thead>
                    {% for e in questiontags %}
                    	<tr>
                    		<td style="width:50px">
                    			<a class="" href="{{ path('admin_qtage',{'eid':e.id}) }}" style="">{{ e.id }}</a>
                    		</td>
                    		<td style="width:250px">
                    			<a class="" href="{{ path('admin_qtage',{'eid':e.id}) }}" style="">{{ e.title }}</a>
                    		</td>
                		</tr>
                	{% endfor %}
				</table>
            	</div>
            	<br/>
               {{ form_start(form) }}
                	{{ form_errors(form) }}
                	
                	<h3>Here u can select Question-Tag for delete and press save</h3> 
        	        {{ form_row(form.questiontags) }}
        			<br/>
        			<br/>
            		    	
            		<h3>Here u can add new Question-Tag and save</h3>
            		{{ form_row(form.questiontagnew) }}
            		<br/>
            		<br/>
            		
                	
                	<div style="display: none">{{ form_rest(form) }}</div>
            		<div class="form-field">
            			<button class="btn btn-primary btn-lg" type="submit">Speichern</button>
            		</div>
                
            		<script type="text/javascript">
            		//
            		$( "#" ).each(function(index) {
            			
            		});
            		</script>
        	  {{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %} 