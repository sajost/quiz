{# src/AppBundle/Resources/views/Admin/carlogtage.html.twig #} 
{% extends 'admin/init.html.twig' %} 

{% block body %}
	<div id="" class="container">

		<div id="panel" class="panel panel-default">
			<div class="panel-heading">
            	<a class="" href="{{ path('admin_question') }}" style="">Back to Questions</a>
            </div>
			<div class="panel-body">
           		<form action="{{ path('admin_questione',{'eid':question.id}) }}" method="post" id="f-admin-question" data-toggle="validator" role="form">
            	
            		<h3>Da kannst eine Frage bearbeiten und speichern</h3>
            		<br/>
            		
            		<div class="form-group">
        				<label for="{{ form.title.vars.id }}">Fragetext</label>
        				{{ form_widget(form.title) }}
        				<div class="help-block with-errors">{{ form_errors(form.title) }}</div>
        			</div>
                	
            		<div class="form-group">
        				<label class="" for="{{ form.status.vars.id }}">Status</label>
        				{{ form_widget(form.status) }}
        				<div class="help-block with-errors">
        					{{ form_errors(form.status) }}
        				</div>
        			</div>
            		
            		<div class="form-group">
        				<label for="{{ form.truecount.vars.id }}">True</label>
        				{{ form_widget(form.truecount) }}
        				<div class="help-block with-errors">{{ form_errors(form.truecount) }}</div>
        			</div>
            		
            		
            		<div class="form-group">
        				<label for="{{ form.published.vars.id }}">Publiziert</label>
        				{{ form_widget(form.published) }}
        				<div class="help-block with-errors">{{ form_errors(form.published) }}</div>
        			</div>
            		
            		<div class="form-group">
        				<label for="{{ form.source.vars.id }}">Quelle</label>
        				{{ form_widget(form.source) }}
        				<div class="help-block with-errors">{{ form_errors(form.source) }}</div>
        			</div>
            		
            		<div class="form-group">
        				<label for="{{ form.difficulty.vars.id }}">Schwierigkeitsgrad</label>
        				{{ form_widget(form.difficulty) }}
        				<div class="help-block with-errors">{{ form_errors(form.difficulty) }}</div>
        			</div>
        		
            		{{ form_row(form.cats) }}
            		
            		{{ form_row(form.tags) }}
            		
            		<div class="btn-toolbar" role="toolbar" aria-label="count-toolbar">
                		<div class="btn-group" role="group" aria-label="count-group">
                			<h3>Antworten</h3>
                          	<button class="btn btn-default btn-sm answers-count {% if answercount==4 %}active{% endif %}" type="button" id="answer-count-4">4</button>
                          	<button class="btn btn-default btn-sm answers-count {% if answercount==5 %}active{% endif %}" type="button" id="answer-count-5">5</button>
                          	<button class="btn btn-default btn-sm answers-count {% if answercount==6 %}active{% endif %}" type="button" id="answer-count-6">6</button>
                          	<button class="btn btn-default btn-sm answers-count {% if answercount==7 %}active{% endif %}" type="button" id="answer-count-7">7</button>
                          	<button class="btn btn-default btn-sm answers-count {% if answercount==8 %}active{% endif %}" type="button" id="answer-count-8">8</button>
                        </div>
                    </div>
                    <div class="list-group form-group answers-group">
                        {# iterate over each existing tag and render its only field: name #}
                        {% for answer in form.answers %}
                        	{% if answer.vars.value.title=='' and loop.index>4 %}{% set style="display:none;"%}{% else %}{% set style="display:;" %}{% endif %}
                        	<div class="list-group-item" style="{{ style }}">
                            	<label for="{{ answer.title.vars.id }}">Antwort-{{ loop.index }}</label>
                				{{ form_widget(answer.title) }}
                				<div class="help-block with-errors">{{ form_errors(answer.title) }}</div>
                                {# - #}
								<label style="display:none" for="{{ answer.status.vars.id }}">Antwort-{{ loop.index }}</label>
                				{{ form_widget(answer.status) }}
                				<div class="help-block with-errors">{{ form_errors(answer.status) }}</div>
                            </div>
                        {% endfor %}
                    </div>
            		
                	
                	<div style="display: none">{{ form_rest(form) }}</div>
            		<div class="f-admin">
            			<button class="btn btn-primary btn-lg" type="submit">Speichern</button>
            		</div>
                
            		<script type="text/javascript">
                		//
                		$( "#" ).each(function(index) {
                			
                		});
            		</script>
        	</form>
        </div>
	</div>
</div>
   
{% endblock %} 