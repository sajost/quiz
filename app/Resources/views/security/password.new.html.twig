{# src/AppBundle/Resources/views/default/password.html.twig #} 
{% extends 'security/init.html.twig' %} 


{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block js %}
    {{ parent() }}
{% endblock %}

{# put input + label of checkbox in the div#}
{% if form is defined %}
    {% form_theme form  'admin/form.fields.html.twig' %}
{% endif %}

{% block body %}
	<div id="" class="container">

		<div id="panel" class="panel panel-default">
			<div class="panel-heading">
            	<h3 class="panel-title">Da können Sie ihre neues Passwort angeben</h3>
            </div>
			<div class="panel-body">
        	
               <form action="{{ path('password_new') }}" method="post" class="" id="f-my-password" data-toggle="validator" role="form">
                	
                	<div class="form-group">
        				<label for="{{ form.password.pass1.vars.id }}">Neues Passwort</label>
        				{{ form_widget(form.password.pass1) }}
        				<div class="help-block with-errors">{{ form_errors(form.password.pass1) }}</div>
        			</div>
                	
                	<div class="form-group">
        				<label for="{{ form.password.pass2.vars.id }}">Widerholen</label>
        				{{ form_widget(form.password.pass2, { 'attr': {'data-match': '#'~form.password.pass1.vars.id } }) }}
        				<div class="help-block with-errors">{{ form_errors(form.password.pass2) }}</div>
        			</div>
                	
                	<div style="display:none ">
                	    {{ form_rest(form) }}
                	</div>															
            		<div class="form-group">
            			<a class="btn btn-default btn-sm" href="{{ path('my_user') }}">Zurück</a>
            			<button class="btn btn-primary btn-sm" type="submit">Speichern</button>
            		</div>
                
            		<script type="text/javascript">
            		//
            		$( "#" ).each(function(index) {
            			
            		 });
            		</script>
               </form>
			</div>
		</div>
		
	</div>


{% endblock %} 